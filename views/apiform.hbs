<div class="container mt-5">
       <h2 style="text-align: center;">Query Restaurant</h2>

        <form id="restaurantQueryForm" method="get" action="/api/restaurant/pageapi">
            <div class="form-group">
                <label for="page">Page:</label>
                <input type="number" class="form-control" id="page" name="page" required>
            </div>

            <div class="form-group">
                <label for="perPage">Per Page:</label>
                <input type="number" class="form-control" id="perPage" name="perPage" required>
            </div>

            <div class="form-group">
                <label for="borough">Borough:</label>
                <input type="text" class="form-control" id="borough" name="borough">
            </div>

            <button type="submit" class="btn btn-primary" >Submit</button>
        </form>
    </div>