<div class="container mt-5 ml-0 mr-0" style="max-width: 1300px;">

  <h2 style="text-align: center;">Restaurant Data</h2>

  <table class="table table-bordered" id="dataTable">
    <thead>
      <tr>
        <th class="text-center"><button type="button" class="btn btn-dark sort" data-column="ID">ID<i class="fas fa-caret-up"></i><i class="fas fa-caret-down" ></i>
  </button></th>
        <th class="text-center"><button type="button" class="btn btn-dark sort" data-column="Name">Name<i class="fas fa-caret-up"></i><i class="fas fa-caret-down"></i>
  </button></th>
        <th class="text-center "><button type="button" class="btn btn-dark sort " data-column="Borough">Borough <i class="fas fa-caret-up"></i><i class="fas fa-caret-down"></i>
  </button></th>
        <th class="text-center"><button type="button" class="btn btn-dark sort" data-column="Cuisine">Cuisine <i class="fas fa-caret-up"></i><i class="fas fa-caret-down"></i>
  </button></th>
        <th class="text-center"><button type="button" class="btn btn-dark " >Address<i class="fas fa-caret-up"></i><i class="fas fa-caret-down"></i>
  </button></th>
        <th>
    Coordinates 
  </th class="text-center">
        <th>
    Grades 
  </th>
      </tr>
    </thead>
    <tbody>
      {{#each restaurantData}}
        <tr>
          <td class="col-sm-1">{{restaurant_id}}</td>
          <td>{{name}}</td>
          <td class="col-sm-3">{{borough}}</td>
          <td>{{cuisine}}</td>
          <td>{{address.building}} {{address.street}}, {{address.zipcode}}</td>
          <td>{{address.coord.[0]}} ,{{address.coord.[1]}} </td>
          <td><button type="button" data-id="{{_id}}" class="btn btn-primary" onclick="showGradeModal(this)">Grade</button></td>
        </tr>
      {{/each}}
    </tbody>
    </table>
<div class="modal fade" id="gradeModal" tabindex="-1" role="dialog" aria-labelledby="gradeModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="gradeModalLabel">Grade Details</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <!-- Display grade details here -->
          
            <tr>
              <td id="gradeScore"></td>
              <td id="gradeLetter"></td>
              <td id="gradeDate"></td>
            </tr>
          </tbody>
        </table>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
       

</div>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
